<script>
  function addColorPicker( id, attrib ){
    $(id).spectrum({
        color: attrib,
        showAlpha: true,
        showInput: true,
        showPalette: true,
        preferredFormat: "hex6",
        localStorageKey: "spectrum.gamegen",
        move: function(tinycolor){
          $(id).trigger('change');
        },
        hide: function(tinycolor){
          $(id).trigger('change');
        },
    });
  }
</script>

