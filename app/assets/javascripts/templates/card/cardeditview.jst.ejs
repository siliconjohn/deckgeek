              <input type='text' id="border-color-picker" />
              <script>
                $("#border-color-picker").spectrum({
                    color: "<%= border_color %>",
                    showAlpha: true,
                    showInput: true,
                    showPalette: true,
                    preferredFormat: "hex6",
                    //showSelectionPalette: true,
                    //localStorageKey: "spectrum.gamegen",
                    move: function(tinycolor)
                    {
                      $("#border-color-picker").trigger('change');
                    },

                    hide: function(tinycolor)
                    {
                      $("#border-color-picker").trigger('change');
                    },

                });
              </script>
            </div>
