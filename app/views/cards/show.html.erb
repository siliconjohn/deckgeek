<script>

  function addColorPickerWithAlpha( id, attrib ){
    $(id).spectrum({
        color: attrib,
        showAlpha: true,
        showInput: true,
        showPalette: true,
        preferredFormat: "hex6",
        localStorageKey: "spectrum.gamegen",
        hide: function(tinycolor){
          $(id).trigger('change');
        },
    });
  }

  function addColorPicker( id, attrib ){
    $(id).spectrum({
        color: attrib,
        showAlpha: false,
        showInput: true,
        showPalette: true,
        preferredFormat: "hex6",
        localStorageKey: "spectrum.gamegen",
        hide: function(tinycolor){
          $(id).trigger('change');
        },
    });
  }

</script>

