

<!-- Load the games -->
<script type="text/javascript">

  $(function(){addGameView('#main-container');});


window.onload = function () { 
  var tour = new Tour({
  debug: true,
  backdrop: true,
    storage: window.localStorage}
    );

  tour.addSteps([
    {
        element: "#new-game-button", // string (jQuery selector) - html element next to which the step popover should be shown
        title: "Creating a new game...", // string - title of the popover
        content: "Click this button to create a new card game. Create as many as you want.", // string - content of the popover
          placement: "right" 
    },
    {
        element: $(".edit-game-button").first(),
        title: "Editing your game...",
        content: "Click the green 'Edit Game' button to make changes to your game. ",
          placement: "top"
    },
    {
        element: $(".print-game-button").first(),
        title: "Printing",
        content: "When you are finished with your game click this button to download your game for printing.",
          placement: "left" 
    }
]);
tour.restart(true);
}
</script>
